<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lcc.blog">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".config.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_avatar"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.user.authentication.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.user.authentication.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.post.CreatePostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.web.WebActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.user.UserCenterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.setting.SettingActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>